<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_205452"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_post_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1.5" />

    <TextView
        android:id="@+id/tv_post_link_title"
        style="@style/AppTheme.TextView.Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Black.14s"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_post_link_description"
        style="@style/AppTheme.TextView.Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Black.14s" />

    <TextView
        android:id="@+id/tv_post_link_caption"
        style="@style/AppTheme.TextView.Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
